

<div class="container-cursos">
<h1>Cursos</h1>
    <ul class="course-list">
        {{#each cursos}}
            <li class="course-item">
            <div class="div-curso">
                <img class="img-curso" src="{{this.imagem}}" alt="Imagem do curso">
                <div class="div-info-curso">
                    <h2>{{this.titulo}}</h2>
                    <span style="margin-bottom: 20px;">{{this.descricao}}</span>
                    <a href="/curso/visualizarAulas/{{this.id}}" class="btn-visualizar">Visualizar</a>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>
</div>